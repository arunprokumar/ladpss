<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Author Footer"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-author_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <contactdetailstab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Contact Details Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"/>
                            <address
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Address"
                                name="./address"/>
                            <phone
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Phone"
                                name="./phone"/>
                            <email
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="E-Mail"
                                name="./email"/>
                        </items>
                    </contactdetailstab>
                    <bureauslinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Bureaus Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Footer Details">
                                <items jcr:primaryType="nt:unstructured">
                                    <bureauslinkdetails
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Footer Details"
                                        fieldLabel="Footer Details"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Footer Details"
                                            name="./bureauslinkdetails">
                                            <items jcr:primaryType="nt:unstructured">
                                                <blinktext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link Text"
                                                    fieldLabel="Link Text"
                                                    name="./blinktext"/>
                                                <blinkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link URL"
                                                    fieldLabel="Link URL"
                                                    name="./blinkURL"/>
                                            </items>
                                        </field>
                                    </bureauslinkdetails>
                                </items>
                            </well>
                        </items>
                    </bureauslinks>
                    <externallinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="External Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Footer Details">
                                <items jcr:primaryType="nt:unstructured">
                                    <externallinkdetails
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Footer Details"
                                        fieldLabel="Footer Details"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Footer Details"
                                            name="./externallinkdetails">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linktext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link Text"
                                                    fieldLabel="Link Text"
                                                    name="./linktext"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link URL"
                                                    fieldLabel="Link URL"
                                                    name="./linkURL"/>
                                            </items>
                                        </field>
                                    </externallinkdetails>
                                </items>
                            </well>
                        </items>
                    </externallinks>
                    <policieslinks
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Policies"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Footer Details">
                                <items jcr:primaryType="nt:unstructured">
                                    <policylinkdetails
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Footer Details"
                                        fieldLabel="Footer Details"
                                        required="{Boolean}false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Footer Details"
                                            name="./policylinkdetails">
                                            <items jcr:primaryType="nt:unstructured">
                                                <plinktext
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link Text"
                                                    fieldLabel="Link Text"
                                                    name="./plinktext"/>
                                                <plinkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Link URL"
                                                    fieldLabel="Link URL"
                                                    name="./plinkURL"/>
                                            </items>
                                        </field>
                                    </policylinkdetails>
                                </items>
                            </well>
                        </items>
                    </policieslinks>
                    <footerbottom
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Footer Bottom"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <tagline
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="TagLine"
                                name="./tagline"/>
                            <copyrights
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Copyrights"
                                name="./copyrights"/>
                            <reserved
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Reserved"
                                name="./reserved"/>
                            <logo
                                granite:class="dpss-footer-author-logo"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                allowUpload="{Boolean}false"
                                autoStart="{Boolean}false"
                                class="cq-droptarget"
                                fieldLabel="Logo image"
                                fileNameParameter="./fileName"
                                fileReferenceParameter="./logo"
                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                multiple="{Boolean}false"
                                name="./file"
                                title="Upload Image Asset"
                                uploadUrl="${suffix.path}"
                                useHTML5="{Boolean}true"/>
                            <logolink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                emptyText="Logo Link"
                                fieldDescription="Logo redirection link"
                                fieldLabel="Logo URL"
                                name="./logolink"
                                rootPath="/content"/>
                        </items>
                    </footerbottom>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
